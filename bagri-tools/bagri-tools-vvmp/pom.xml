    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>nbm-maven-plugin</artifactId>
                <version>${nbm.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <author>Roman Orekhov, Denis Sukhoroslov</author>
                    <distributionUrl>http://bagridb.com/features/ui-in-visualvm-plugin</distributionUrl>
                    <finalName>${project.name}-${project.version}</finalName>
                    <homePageUrl>http://bagridb.com</homePageUrl>
                    <licenseFile>license.txt</licenseFile>
                    <licenseName>GNU General Public License, version 2</licenseName>
                    <requiresRestart>true</requiresRestart>
                    <sourceManifestFile>${basedir}/src/main/resources/META-INF/MANIFEST.MF</sourceManifestFile>
                    <publicPackages>
                        <publicPackage>com.bagri.*</publicPackage>
                    </publicPackages>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven-jar-plugin.version}</version>
                <configuration>
                    <useDefaultManifestFile>true</useDefaultManifestFile>
